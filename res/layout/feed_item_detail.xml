<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff6f6f6"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	<RelativeLayout
	    android:background="@color/white"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		<ImageButton
		    android:id="@+id/fid_btn_back"
		    style="@style/img_btn_style"
		    android:src="@drawable/btn_back"
			/>
		<ImageButton
		    android:id="@+id/fid_btn_speech"
		    android:layout_alignParentRight="true"
		    style="@style/img_btn_style"
		    android:src="@drawable/btn_to_speech"
			/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#b1b1b1"
    	/>
	<WebView
	    android:layerType="software"
	    android:id="@+id/my_web_view"
	    android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#b1b1b1"
  		/>
	<RelativeLayout
	    android:background="@color/white"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <ImageButton
	      	android:id="@+id/fid_btn_collecte"
	        style="@style/img_btn_style"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/fid_btn_collecte"
			/>
	    <ImageButton
	 	    android:id="@+id/fid_btn_share"
	 	    android:layout_centerInParent="true"
	        style="@style/img_btn_style"
	        android:src="@drawable/btn_to_share"
			/>
	    <ImageButton
	        android:id="@+id/fid_btn_comment"
	        android:layout_alignParentRight="true"
	        style="@style/img_btn_style"
	        android:src="@drawable/btn_to_comment"
	        />

	    <TextView
	        android:id="@+id/fid_tv_comment_count"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textColor="@color/white" />

	</RelativeLayout>
</LinearLayout>
